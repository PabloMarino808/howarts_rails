<section class="m-5">    
    <div class="titulo">
        <h1>Characters</h1>
    </div>
    
    <table class="table table-striped table-dark table-hover">
    <thead>
        <tr>
        <th scope="col">Name</th>
        <th scope="col">Location</th>
        <th scope="col">House</th>
        </tr>
    </thead>
    
    <tbody>

    <% @characters.each do |c| %>
        
        <tr>
            <td><%= c.name %></td>
            <td><%= c.location %></td>
            <td><%= c.house %></td>
        </tr>
        
    <% end %>    
    </tbody>    
    </table>    
</section>
