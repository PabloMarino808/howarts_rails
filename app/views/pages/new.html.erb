<section class="m-5">    
    <h1>Add a new Character</h1>
    <%= form_with model: @character, method: :post do |form| %>
        <div class="col-4">
            <div class="m-3">
                <%= form.label :name, "Name", class: "form-label" %>
                <%= form.text_field :name, class: "form-control" %>
            </div>
            <div class="m-3">
                <%= form.label :location, "Location", class: "form-label"
                %>
                <%= form.text_field :location, class: "form-control" %>
            </div>
            <div class="m-3">
                <%= form.label :house, "House", class: "form-label"
                %>
                <%= form.text_field :house, class: "form-control" %>
            </div>
            <div class="m-3">
                <%= form.submit "Submit", class: "btn btn-dark" %>
            </div>
        </div>
    <% end %>
</section>
